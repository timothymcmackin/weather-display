<h1>{{title}}</h1>
<p>Live data from the {{title}}</p>
<table>
  <thead>
    <th>Date</th>
    <th>Time</th>
    <th>Temp<br/>(from humidity sensor)</th>
    <th>Temp<br/>(from barometer)</th>
    <th>Humidity</th>
    <th>Pressure</th>
  </thead>
  {{#each weatherData}}
    <tr>
      <td>{{day}}</td>
      <td>{{time}}</td>
      <td>{{temp_f_from_hum}} F</td>
      <td>{{temp_f_from_bar}} F</td>
      <td>{{humidity}} %</td>
      <td>{{pressure}} pa</td>
    </tr>
  {{/each}}
</table>

<div>
  <canvas id="humidityChart"></canvas>
</div>
<div>
  <canvas id="pressureChart"></canvas>
</div>
<div>
  <canvas id="temperatureChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@^2"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-moment@^1"></script>

<script>
  const humidityChartTag = document.getElementById('humidityChart');
  const pressureChartTag = document.getElementById('pressureChart');
  const temperatureChartChartTag = document.getElementById('temperatureChart');

  new Chart(humidityChartTag, {
    type: 'line',
    data: {
      labels: [
          {{#each timeLabels}}
            "{{this}}",
          {{/each}}
        ],
      datasets: [{
        label: 'Humidity in %',
        data:  [
          {{#each humidityPercents}}
          "{{this}}",
          {{/each}}
        ],
        borderWidth: 1,
      }],
    },
    options: {
      scales: {
        y: {
          suggestedMin: {{humidityMin}},
          suggestedMax: {{humidityMax}},
        },
        x: {
          type: "time",
          time: {
            unit: 'hour',
          },
        },
      },
    },
  });

  new Chart(pressureChartTag, {
    type: 'line',
    data: {
      labels: [
          {{#each timeLabels}}
            "{{this}}",
          {{/each}}
        ],
      datasets: [{
        label: 'Pressure in pa',
        data:  [
          {{#each weatherData}}
          "{{pressure}}",
          {{/each}}
        ],
        borderWidth: 1,
      }],
    },
    options: {
      scales: {
        x: {
          type: "time",
          time: {
            unit: 'hour',
          },
        },
      },
    },
  });

  new Chart(temperatureChartChartTag, {
    type: 'line',
    data: {
      labels: [
          {{#each timeLabels}}
            "{{this}}",
          {{/each}}
        ],
      datasets: [{
        label: 'Temp from barometer',
        data:  [
          {{#each weatherData}}
            "{{temp_f_from_bar}}",
          {{/each}}
        ],
        borderWidth: 1,
      },{
        label: 'Temp from humidity sensor',
        data:  [
          {{#each weatherData}}
            "{{temp_f_from_hum}}",
          {{/each}}
        ],
        borderWidth: 1,
      },{
        label: 'Average',
        data:  [
          {{#each weatherData}}
            "{{averageTemp}}",
          {{/each}}
        ],
        borderWidth: 3,
      }]
    },
    options: {
      scales: {
        x: {
          type: "time",
          time: {
            unit: 'hour',
          },
        },
      },
    },
  });
</script>